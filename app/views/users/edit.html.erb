<% provide(:button_text, '更新') %>
<h1>ユーザー情報編集</h1>

<% if @user.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <%= @user.errors.count %>件のエラーがあります。
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'form'%>
  </div>
</div>
<%= link_to "削除", @user ,method: :delete ,class: "btn btn-danger btn-sm pull-right", data:{confirm:"本当にアカウントを削除しますか？"} %>