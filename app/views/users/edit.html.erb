<h1>ユーザー情報編集</h1>

<% if @user.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <%= @user.errors.count %>件のエラーがあります。
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, url: user_path(@user), local: true, method: :patch) do |f| %>
      
      <%= f.label :name, class: "label-signup" %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email, class: "label-signup" %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, class: "label-signup" %>
      <%= f.password_field :password, class: "form-control" %>
      
      <%= f.submit "更新", class: "btn btn-primary btn-block btn-signup" %>
    <% end %>
  </div>
</div>
