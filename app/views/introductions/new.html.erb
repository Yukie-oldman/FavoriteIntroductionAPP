<% provide(:button_text, '投稿する！') %>
<% provide(:url, user_introductions_path) %>

<h1>好きなものを紹介しよう！</h1>

<% if @introduction.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <%= @introduction.errors.count %>件のエラーがあります。
      <% @introduction.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'introductions/form' %>
  </div>
</div>