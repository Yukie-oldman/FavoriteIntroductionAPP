<div class="row">
  <h1><%= @introduction.name %></h1>
  <div class="col-md-10 col-md-offset-1">
    <table class="table table-bordered">
      
      <tr>
        <th class="task_table_th"><%= Introduction.human_attribute_name :name %></th>
        <td>
          <%= @introduction.name %>
          <% if @likes.present? %>
            <%= "#{@likes.count}いいね！" %>
          <% end %>
        <%= link_to '検索する', search_path(keyword: @introduction.name), class: "btn btn-primary pull-right" %>
        </td>
      </tr>
      
      <tr>
        <th class="task_table_th"><%= Introduction.human_attribute_name :tags %></th>
        <td><%= Rinku.auto_link(@introduction.tags, :all, 'target="_blank"').html_safe %></td>
      </tr>
      
      <tr>
        <th class="task_table_th"><%= Introduction.human_attribute_name :contents %></th>
        <td><%= Rinku.auto_link(@introduction.contents, :all, 'target="_blank"').html_safe %></td>
      </tr>

    </table>
    <% if current_user.id == @introduction.user_id %>
      <%= link_to "編集", edit_user_introduction_path(@user, @introduction), class:"btn btn-success" %>
      <%= link_to "削除", user_introduction_path(@user, @introduction),method: :delete , class:"btn btn-danger" ,data:{confirm:"削除しますか？"} %>
    <% elsif @likes.find_by(voter_id: current_user.id).nil? %>
      <%= link_to "いいねする", like_introduction_path(@introduction), class: "btn btn-primary" %>
    <% else %>
      <%= link_to "いいねを取り消す", unlike_introduction_path(@introduction), class: "btn btn-primary" %>
    <% end %>
  </div>    
</div>
