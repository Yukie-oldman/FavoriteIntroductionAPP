<h1>タスク編集</h1>

<% if @task.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <%= "#{@task.errors.count}件のエラーがあります。" %> 
    <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @task, url: user_task_path(@user), local: true, method: :patch) do |f| %>
      
      <%= f.label :name, class: "label-signup" %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :description, class: "label-signup" %>
      <%= f.text_area :description, class: "form-control",rows: 5 %>

      <%= f.submit "更新", class: "btn btn-primary btn-signup" %>
      <%= link_to "キャンセル", user_tasks_path(@user), class: "btn btn-default btn-form btn-signup" %>
    <% end %>
  </div>
</div>
