<div class="row">
  <h1><%= @task.name %></h1>
  <div class="col-md-10 col-md-offset-1">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>タスク名</th>
          <th><%= @task.name %></th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td>内容</td>
          <td><%= Rinku.auto_link(@task.description, :all, 'target="_blank"').html_safe %></td>
        </tr>
      </tbody>
    </table>
    <%= link_to "編集", edit_user_task_path(@task) %>
    <%= link_to "削除", user_task_path(@user, @task),method: :delete %>
  </div>    
</div>
