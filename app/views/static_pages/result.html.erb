<div>
  <ul class="nav nav-tabs" role="tablist">
    <li class="active" role="presentation">
      <a aria-controls="tab_a" data-toggle="tab" href="#tab_a" role="tab">Amazon</a>
    </li>
    <li role="presentation">
      <a aria-controls="tab_b" data-toggle="tab" href="#tab_b" role="tab">楽天</a>
    </li>
    <li role="presentation">
      <a aria-controls="tab_c" data-toggle="tab" href="#tab_c" role="tab">Yahoo!</a>
    </li>
    <li role="presentation">
      <a aria-controls="tab_d" data-toggle="tab" href="#tab_d" role="tab">Youtube</a>
    </li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="tab_a" role="tabpanel">
      <p>
        Amazon検索結果
      </p>
    </div>
    <div class="tab-pane" id="tab_b" role="tabpanel">
      <div id="search-box">
        <%= form_tag('/', method: :get) do %>
          <%= text_field_tag :good, "",  id: "good_search", name: "keyword", placeholder: "キーワードを打ち込んでください", style: "width: 200px;"%><button title="検索" type="submit">検索</button>
        <% end %>
      </div>
      <h2>検索結果</h2>
      <div id='good_list'>
        <%= render partial: 'good_list' %>
      </div>
    </div>
    <div class="tab-pane" id="tab_c" role="tabpanel">
      <p>
        Yahoo検索結果
      </p>
    </div>
    <div class="tab-pane" id="tab_d" role="tabpanel">
      <p>
        Youtube検索結果
      </p>
    </div>
  </div>
</div>