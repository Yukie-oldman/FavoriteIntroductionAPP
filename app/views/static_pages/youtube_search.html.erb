<h1>Youtube検索結果</h1>
<div>
  <% if @youtube_movies.present? %>
    <div>
      <% @youtube_movies.each do |movie| %>
        
        <!--アイテム-->
        <div style="padding: 10px;">
          
          <!--サムネイル-->
          <div class="introduction-item__thumnail">
            <%= image_tag movie.snippet.thumbnails.default.url %>
          </div>

          <div style="display:inline-block;">
            <!--タグ-->
            <!--アイテム名-->
            <p><h4><%= link_to movie.snippet.title.truncate(40), "https://www.youtube.com/watch?v=#{movie.id.videoId}", target: :_blank %></h4></p>
            <h5><%= link_to movie.snippet.channelTitle, "https://www.youtube.com/channel/#{movie.snippet.channelId}", target: :_blank %></h5>
            <!--キャプション-->
            <h5><%= movie.snippet.publishedAt.strftime("%Y年%m月") %></h5>

            <!--いいね-->
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>