<% provide(:title, "Top") %>
<div class="container">
  <div calss="row">
    <div class="col-md-7 center">
      <br>
      <h1>TaskApp</h1>
      <p>
        <br>
        TaskAppは簡易ToDo管理ツールです。<br>
        <br>
        ↓↓初めてのご利用↓↓
      </p>
        <% if current_user.nil? or current_user.admin? %>
          <%= link_to "アカウント作成", signup_path, class: "btn btn-lg btn-success" %>
        <% else %>
          <%= link_to "アカウント作成", signup_path, class: "btn btn-lg btn-success disabled" %>
        <% end %>
    </div>
  
    <div>
      <div class="col-md-4">
        <h1>ログイン</h1>
        <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
          <% if current_user.nil? %>
            <%= f.label "メールアドレス", class: "label-login" %>
            <%= f.email_field :email, class: "form-control" %>
      
            <%= f.label "パスワード", class: "label-login" %>
            <%= f.password_field :password, class: 'form-control'%>
            
            <%= f.label "ログイン", class: "checkbox inline checkbox-login", for: "remember-me" do %>
            <%= f.check_box :remember_me, id: "remember-me" %>
            <span>ログイン情報を記憶する</span>
            <% end %>
            <%= f.submit "Log In", class: "btn btn-primary btn-block btn-login" %>
          <% else %>
            <%= f.label "メールアドレス", class: "label-login" %>
            <%= f.email_field :email, class: "form-control", disabled:true  %>
      
            <%= f.label "パスワード", class: "label-login" %>
            <%= f.password_field :password, class: 'form-control', disabled:true  %>
            
            <%= f.label :remember_me, class: "checkbox inline checkbox-login", for: "remember-me" do %>
            <%= f.check_box :remember_me, id: "remember-me", disabled:true  %>
            <span>ログイン情報を記憶する</span>
            <% end %>
            <%= f.submit "ログイン状態です", class: "btn btn-primary btn-block btn-login",disabled:true %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>