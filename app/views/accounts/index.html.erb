<h1><%= current_user.name %>の出納一覧</h1>
  <%= link_to "出納登録", new_user_account_path(current_user), class: "btn btn-primary pull-right w-10" %>
  <table class="table table-condensed table-hover">
    <thead>
      <tr>
        <th><%= Account.human_attribute_name :cashed_on %></th>
        <th><%= Account.human_attribute_name :summary %></th>
        <th><%= Account.human_attribute_name :category %></th>
        <th><%= Account.human_attribute_name :price %></th>
        <th><%= Account.human_attribute_name :description %></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @accounts.each do |account| %>
        <tr>
          <td><%= l(account.created_at, format: :day) %></td>
          <td><%= link_to account.summary, user_account_path(@user,account) %></td>
          <td><%= account.category %></td>
          <td><%= account.price.to_s(:delimited) %></td>
          <td><%= account.description %></td>
          <td>
            <span><%= link_to "編集", edit_user_account_path(@user,account) ,class: "btn btn-success" %></span>
            <span><%= link_to "削除", user_account_path(@user,account), method: :delete , class: "btn btn-danger" ,data:{confirm:"#{account.summary}を削除しますか？"} %></span>
          </td>
        </tr>  
      <% end %>
    </tbody>
  </table>