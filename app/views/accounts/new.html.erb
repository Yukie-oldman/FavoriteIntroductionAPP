<% provide(:button_text, '登録') %>
<h1>出納登録</h1>

<% if @account.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <%= @account.errors.count %>件のエラーがあります。
      <% @account.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @account, url: user_accounts_path(@user), local: true) do |f| %>
      
      <%= f.label :cashed_on, class: "label-signup" %>
      <%= f.date_field :cashed_on, value: Time.current.strftime('%Y-%m-%d'), class: "form-control" %>

      <%= f.label :summary, class: "label-signup" %>
      <%= f.text_field :summary, class: "form-control" %>

      <%= f.label :category, class: "label-signup" %>
      <%= f.text_field :category, class: "form-control" %>

      <%= f.label :price, class: "label-signup" %>
      <%= f.number_field :price, class: "form-control" %>

      <%= f.label :description, class: "label-signup" %>
      <%= f.text_field :description, class: "form-control" %>

      <%= f.submit yield(:button_text), class: "btn btn-primary btn-signup btn-block" %>
    <% end %>
  </div>
</div>